using Gtk 4.0;
using Adw 1;

template $KpOllamaConfigDialog: Adw.Dialog {
  title: _("Ollama Settings");
  content-width: 450;
  content-height: 500;

  Adw.ToolbarView {
    [top]
    Adw.HeaderBar header_bar {
      show-title: false;
    }

    Adw.PreferencesGroup {
      title: _("Configuration");

      Adw.EntryRow ollama_url {
        title: _("Ollama URL");
        input-purpose: url;
      }

      Adw.EntryRow model_name {
        title: _("Model Name");
        input-purpose: name;
      }
    }



    [bottom]
    Box {
      halign: center;
      valign: center;

      Button save_button {
        label: _("_Save");
        use-underline: true;

        styles [
          "pill",
          "suggested-action"
        ]
      }

      styles [
        "toolbar-thick"
      ]
    }
  }

}
