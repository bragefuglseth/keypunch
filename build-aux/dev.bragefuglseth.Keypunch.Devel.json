{
    "id" : "dev.bragefuglseth.Keypunch.Devel",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "keypunch-wrapper.sh",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--env=RUST_BACKTRACE=1"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ],
        "env" : {
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "keypunch=debug"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
    	{
	  "name": "blueprint-compiler",
	  "buildsystem": "meson",
	  "cleanup": ["*"],
	  "sources": [
	    {
	      "type": "git",
	      "url": "https://gitlab.gnome.org/jwestman/blueprint-compiler",
	      "tag": "v0.14.0"
	    }
	  ]
	},
	{
	    "name" : "keypunch-wrapper",
	    "buildsystem" : "simple",
	    "build-commands" : [
	    	"install -Dm755 keypunch-wrapper.sh /app/bin/keypunch-wrapper.sh"
	    ],
	    "sources" : [
	    	{
            	    "type" : "script",
            	    "dest-filename" : "keypunch-wrapper.sh",
            	    "commands" : [
            	    	"for i in {0..9}; do\ntest -S $XDG_RUNTIME_DIR/discord-ipc-$i || ln -sf {app/com.discordapp.Discord,$XDG_RUNTIME_DIR}/discord-ipc-$i;\ndone",
            	    	"keypunch"
            	    ]
            	}
	    ]
	},
        {
            "name" : "keypunch",
            "builddir" : true,
            "buildsystem" : "meson",
            "run-tests" : true,
            "sources" : [
                {
                    "type" : "dir",
                    "path" : ".."
                }
            ]
        }
    ]
}
